<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Ballers.SignUpPage" xmlns:custom="clr-namespace:Ballers" Title="Sign Up">
    <ScrollView Padding="0,0,0,20">
        <StackLayout Padding="10,10,10,0">
            <StackLayout HorizontalOptions="Center">
                <Image Source="logo" HeightRequest="150" WidthRequest="100" />
            </StackLayout>
            <StackLayout Spacing="10">
                <Label HorizontalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Create your " FontAttributes="Italic, Bold" FontSize="30" />
                            <Span Text="Baller" ForegroundColor="Red" FontAttributes="Bold,Italic" FontSize="30" />
                            <Span Text="Profile" FontAttributes="Bold,Italic" FontSize="30" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
            <StackLayout Spacing="10" Margin="0,20,0,0" VerticalOptions="Center">
                <custom:CustomEntry x:Name="entryUsername" Margin="0,10,0,0" BorderWidth="1" BackgroundColor="Transparent" CornerRadius="10" IsCurvedCornersEnabled="True" BorderColor="#1E4677" FontSize="17" HeightRequest="50" Placeholder="Username" TextColor="Black"
                    FontAttributes="Bold" WidthRequest="100" />
                <custom:CustomEntry x:Name="entryEmail" BorderWidth="1" CornerRadius="10" BackgroundColor="Transparent" IsCurvedCornersEnabled="True" BorderColor="#1E4677" FontSize="17" HeightRequest="50" Placeholder="Email Address" TextColor="Black" FontAttributes="Bold"
                    WidthRequest="100" />
                <custom:CustomEntry x:Name="entryPassword" BorderWidth="1" IsPassword="true" BackgroundColor="Transparent" CornerRadius="10" IsCurvedCornersEnabled="True" BorderColor="#1E4677" FontSize="17" HeightRequest="50" Placeholder="Select a password" TextColor="Black"
                    FontAttributes="Bold" WidthRequest="100" />
                <custom:CustomEntry x:Name="entryConfirmPassword" BorderWidth="1" IsPassword="true" BackgroundColor="Transparent" CornerRadius="10" IsCurvedCornersEnabled="True" BorderColor="#1E4677" FontSize="17" HeightRequest="50" Placeholder="Confirm your password" TextColor="Black"
                    FontAttributes="Bold" WidthRequest="100" />
            </StackLayout>
            <StackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="SIGN ME UP!" WidthRequest="200" BorderRadius="23" TextColor="White" BackgroundColor="#1E4677" Font="Bold, 15" Clicked="btnSignUp_Clicked"/>
            </StackLayout>
