            <StackLayout HorizontalOptions="Center" Margin="0,20,0,0">
                <Label HorizontalTextAlignment="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="By creating a Ballerprofile, you agree to our " FontAttributes="Bold" />
                            <Span Text="Terms " ForegroundColor="Red" FontAttributes="Bold,Italic" />
                            <Span Text=" &amp; " FontAttributes="Italic" FontSize="Small" />
                            <Span Text="Conditions " ForegroundColor="Teal" FontAttributes="Bold,Italic" />
